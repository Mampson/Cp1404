BoxLayout:
    id: main_box
    orientation: "vertical"

    BoxLayout:
        id: top_panel
        BoxLayout:
            orientation: "horizontal"
            TextInput:
                id: input_field
                text: '7'
                font_size: 48
                on_text: app.handle_calculate()
                multiline: False

        BoxLayout:
            orientation: "vertical"

            Button:
                id: up_button
                text: " Up "
                on_press: app.handle_increment(1)
            Button:
                id: down_button
                text: " Down "
                on_press: app.handle_increment(-1)


    Button:
        id: convert_button
        text: " Convert miles to kilometers "
        on_press: app.handle_calculate()

    Label:
        id: output_label
        color: (1, 0, 1, 1)
        font_size: 48

